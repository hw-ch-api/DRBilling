<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<TargetEndpoint name="default">
    <Description/>
    <FaultRules/>
    <Flows>
        <Flow name="upload">
            <Description/>
            <Request/>
            <Response>
                <Step>
                    <FaultRules/>
                    <Name>ShowAddSuccess</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/upload") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="updateupload">
            <Description>updateupload</Description>
            <Request/>
            <Response>
                <Step>
                    <FaultRules/>
                    <Name>ShowEditSuccess</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/updateupload") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="download">
            <Description>download</Description>
            <Request>
                <Step>
                    <Name>setAppend</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>Download Header</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/download") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>AssignMessage.DisablePathCopy</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPTargetConnection>
        <Properties>
            <Property name="target.copy.pathsuffix">false</Property>
        </Properties>
        <URL>https://api.usergrid.com/shridharnagaral1/sandbox/assets</URL>
        <!-- <URL>https://{hch_baas}/{partner_assets_baas}</URL> -->
    </HTTPTargetConnection>
</TargetEndpoint>